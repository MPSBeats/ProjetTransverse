{
  "name": "invithegourmand",
  "version": "1.0.0",
  "description": "Site e-commerce pour L'InviThé Gourmand — Salon de thé, macarons, pâtisseries à Paris",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node app.ts",
    "build": "tsc && npx tailwindcss -i ./src/css/input.css -o ./public/css/style.css --minify",
    "start": "node dist/app.js",
    "css:watch": "npx tailwindcss -i ./src/css/input.css -o ./public/css/style.css --watch",
    "css:build": "npx tailwindcss -i ./src/css/input.css -o ./public/css/style.css --minify",
    "prisma:migrate": "npx prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:studio": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "csrf-csrf": "^3.0.6",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "ejs-mate": "^4.0.0",
    "express": "^4.21.0",
    "express-mysql-session": "^3.0.3",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.14",
    "sharp": "^0.33.5",
    "stripe": "^16.12.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-mysql-session": "^3.0.6",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.0",
    "@types/nodemailer": "^6.4.15",
    "@types/swagger-ui-express": "^4.1.8",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
