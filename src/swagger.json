{
  "openapi": "3.0.0",
  "info": {
    "title": "API L'InviThé Gourmand",
    "version": "1.0.0",
    "description": "Documentation de l'API pour le site e-commerce de L'InviThé Gourmand."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Serveur de développement"
    }
  ],
  "paths": {
    "/api/products": {
      "get": {
        "summary": "Récupérer tous les produits",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filtrer par slug de catégorie"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des produits",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/products/{id}": {
      "get": {
        "summary": "Récupérer un produit par ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Détails du produit",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Produit non trouvé"
          }
        }
      }
    },
    "/api/cart/add": {
      "post": {
        "summary": "Ajouter un produit au panier",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": { "type": "string" },
                  "quantity": { "type": "integer", "minimum": 1 }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produit ajouté"
          }
        }
      }
    },
    "/checkout": {
      "post": {
        "summary": "Finaliser la commande (Création session Stripe)",
        "responses": {
          "200": {
            "description": "URL de redirection Stripe",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "url": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/contact": {
      "post": {
        "summary": "Envoyer un message de contact",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message envoyé"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "price": { "type": "number" },
          "description": { "type": "string" },
          "imageUrl": { "type": "string" },
          "stock": { "type": "integer" }
        }
      }
    }
  }
}
