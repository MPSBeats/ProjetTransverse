<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof metaTitle !=='undefined' ? metaTitle : "Codes Promo — Admin" %>
    </title>
    <meta name="robots" content="noindex, nofollow">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Playfair+Display:wght@600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://unpkg.com/alpinejs@3.14.3/dist/cdn.min.js" defer></script>
</head>

<body class="bg-creme font-body antialiased">
    <div class="flex min-h-screen">
        <%- include('../partials/admin-sidebar') %>

            <div class="flex-1 overflow-auto">
                <div class="p-6 lg:p-8 pt-20 lg:pt-8">
                    <div class="flex flex-col sm:flex-row items-center justify-between gap-4 mb-8">
                        <div class="text-center sm:text-left w-full sm:w-auto">
                            <h1 class="font-display text-2xl text-noir-cafe">Codes Promo</h1>
                        </div>
                        <button onclick="document.getElementById('create-promo-modal').showModal()"
                            class="w-full sm:w-auto px-4 py-2 bg-terracotta text-blanc-casse rounded-gourmand font-medium hover:bg-terracotta-dark transition-colors text-sm flex items-center justify-center gap-2 shadow-md">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 4v16m8-8H4" />
                            </svg>
                            Nouveau code
                        </button>
                    </div>

                    <div class="bg-blanc-casse rounded-gourmand-lg shadow-card overflow-hidden">

                        <!-- Mobile Card View -->
                        <div class="md:hidden p-4 space-y-4">
                            <% promos.forEach(function(promo) { const isExpired=promo.expiresAt && new
                                Date(promo.expiresAt) < new Date(); const isMaxed=promo.maxUses && promo.currentUses>=
                                promo.maxUses;
                                %>
                                <div
                                    class="bg-creme/20 rounded-gourmand p-4 border border-creme/30 relative overflow-hidden">
                                    <!-- Status Stripe -->
                                    <div
                                        class="absolute left-0 top-0 bottom-0 w-1 <%= !promo.isActive ? 'bg-red-500' : isExpired ? 'bg-yellow-500' : isMaxed ? 'bg-yellow-500' : 'bg-green-500' %>">
                                    </div>

                                    <div class="pl-3">
                                        <div class="flex justify-between items-start mb-2">
                                            <div>
                                                <span class="font-bold text-terracotta text-lg tracking-wide">
                                                    <%= promo.code %>
                                                </span>
                                                <p class="text-xs text-brun/60">
                                                    <%= promo.discountType==='percentage' ? ' -' +
                                                        parseFloat(promo.discountValue) + '%' : ' -' +
                                                        formatPrice(parseFloat(promo.discountValue)) %>
                                                </p>
                                            </div>

                                            <% if (!promo.isActive) { %>
                                                <span
                                                    class="px-2 py-1 rounded-full text-[10px] font-medium bg-red-100 text-red-700">Inactif</span>
                                                <% } else if (isExpired) { %>
                                                    <span
                                                        class="px-2 py-1 rounded-full text-[10px] font-medium bg-yellow-100 text-yellow-700">Expiré</span>
                                                    <% } else if (isMaxed) { %>
                                                        <span
                                                            class="px-2 py-1 rounded-full text-[10px] font-medium bg-yellow-100 text-yellow-700">Épuisé</span>
                                                        <% } else { %>
                                                            <span
                                                                class="px-2 py-1 rounded-full text-[10px] font-medium bg-green-100 text-green-700">Actif</span>
                                                            <% } %>
                                        </div>

                                        <div class="grid grid-cols-2 gap-2 text-xs text-brun/60 mb-3">
                                            <div>
                                                <span class="block text-brun/40">Utilisations:</span>
                                                <%= promo.currentUses %>
                                                    <%= promo.maxUses ? '/ ' + promo.maxUses : '' %>
                                            </div>
                                            <div>
                                                <span class="block text-brun/40">Expiration:</span>
                                                <%= promo.expiresAt ? new
                                                    Date(promo.expiresAt).toLocaleDateString('fr-FR') : 'Aucune' %>
                                            </div>
                                            <% if(promo.minOrderAmount) { %>
                                                <div class="col-span-2">
                                                    <span class="block text-brun/40">Min. commande:</span>
                                                    <%= formatPrice(parseFloat(promo.minOrderAmount)) %>
                                                </div>
                                                <% } %>
                                        </div>

                                        <div class="flex justify-end gap-2 border-t border-creme/20 mt-4 pt-4">
                                            <button
                                                onclick="document.getElementById('edit-promo-<%= promo.id %>').showModal()"
                                                class="px-3 py-1.5 rounded-gourmand bg-terracotta/10 text-terracotta text-xs font-medium hover:bg-terracotta hover:text-white transition-colors">
                                                Modifier
                                            </button>
                                            <form method="POST" action="/admin/promos/<%= promo.id %>/delete"
                                                onsubmit="return confirm('Supprimer ce code promo ?')">
                                                <button type="submit"
                                                    class="px-3 py-1.5 rounded-gourmand bg-creme text-brun/60 text-xs font-medium hover:bg-red-50 hover:text-red-600 transition-colors">
                                                    Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% if (promos.length===0) { %>
                                        <div class="text-center py-8 text-brun/40 italic">
                                            Aucun code promo.
                                        </div>
                                        <% } %>
                        </div>

                        <!-- Desktop Table View -->
                        <div class="hidden md:block overflow-x-auto">
                            <table class="w-full text-sm">
                                <thead>
                                    <tr class="bg-creme text-left text-brun/60">
                                        <th class="px-4 py-3">Code</th>
                                        <th class="px-4 py-3">Type</th>
                                        <th class="px-4 py-3">Valeur</th>
                                        <th class="px-4 py-3">Min. commande</th>
                                        <th class="px-4 py-3">Utilisations</th>
                                        <th class="px-4 py-3">Expire le</th>
                                        <th class="px-4 py-3">Statut</th>
                                        <th class="px-4 py-3">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% promos.forEach(function(promo) { const isExpired=promo.expiresAt && new
                                        Date(promo.expiresAt) < new Date(); const isMaxed=promo.maxUses &&
                                        promo.currentUses>= promo.maxUses;
                                        %>
                                        <tr class="border-b border-creme/50 hover:bg-creme/30 transition-colors">
                                            <td class="px-4 py-3">
                                                <span class="font-bold text-terracotta tracking-wide">
                                                    <%= promo.code %>
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-brun/60">
                                                <%= promo.discountType==='percentage' ? 'Pourcentage' : 'Montant fixe'
                                                    %>
                                            </td>
                                            <td class="px-4 py-3 font-medium">
                                                <%= promo.discountType==='percentage' ? parseFloat(promo.discountValue)
                                                    + ' %' : formatPrice(parseFloat(promo.discountValue)) %>
                                            </td>
                                            <td class="px-4 py-3 text-brun/50">
                                                <%= promo.minOrderAmount ? formatPrice(parseFloat(promo.minOrderAmount))
                                                    : '—' %>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <span
                                                    class="px-2 py-1 rounded-full text-xs font-medium bg-creme text-brun/60">
                                                    <%= promo.currentUses %>
                                                        <%= promo.maxUses ? ' / ' + promo.maxUses : '' %>
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-xs text-brun/50">
                                                <%= promo.expiresAt ? new
                                                    Date(promo.expiresAt).toLocaleDateString('fr-FR', { day: '2-digit' ,
                                                    month: '2-digit' , year: 'numeric' }) : 'Illimité' %>
                                            </td>
                                            <td class="px-4 py-3">
                                                <% if (!promo.isActive) { %>
                                                    <span
                                                        class="px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-700">Inactif</span>
                                                    <% } else if (isExpired) { %>
                                                        <span
                                                            class="px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700">Expiré</span>
                                                        <% } else if (isMaxed) { %>
                                                            <span
                                                                class="px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700">Épuisé</span>
                                                            <% } else { %>
                                                                <span
                                                                    class="px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">Actif</span>
                                                                <% } %>
                                            </td>
                                            <td class="px-4 py-3">
                                                <div class="flex gap-2">
                                                    <button
                                                        onclick="document.getElementById('edit-promo-<%= promo.id %>').showModal()"
                                                        class="p-1 text-brun/40 hover:text-vert-the transition-colors"
                                                        title="Modifier">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                            viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                        </svg>
                                                    </button>
                                                    <form method="POST" action="/admin/promos/<%= promo.id %>/delete"
                                                        onsubmit="return confirm('Supprimer ce code promo ?')">
                                                        <button type="submit"
                                                            class="p-1 text-brun/40 hover:text-red-500 transition-colors"
                                                            title="Supprimer">
                                                            <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                            </svg>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% if (promos.length===0) { %>
                                                <tr>
                                                    <td colspan="8" class="px-4 py-8 text-center text-brun/40">
                                                        Aucun code promo. Cliquez sur "Nouveau code" pour en créer un.
                                                    </td>
                                                </tr>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <!-- Modal création -->
    <dialog id="create-promo-modal"
        class="bg-blanc-casse rounded-gourmand-lg shadow-warm-lg w-full max-w-md p-0 backdrop:bg-noir-cafe/40 backdrop:backdrop-blur-sm">
        <form method="POST" action="/admin/promos" class="p-8">
            <div class="flex items-center justify-between mb-6">
                <h2 class="font-display text-xl text-noir-cafe">Nouveau Code Promo</h2>
                <button type="button" onclick="document.getElementById('create-promo-modal').close()"
                    class="p-1 hover:bg-creme rounded-full">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="space-y-4">
                <div>
                    <label class="block text-xs font-medium text-brun mb-1">Code *</label>
                    <input type="text" name="code" required
                        class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none uppercase tracking-wide"
                        placeholder="ex: BIENVENUE20">
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Type de réduction *</label>
                        <select name="discountType" required
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                            <option value="percentage">Pourcentage (%)</option>
                            <option value="fixed">Montant fixe (€)</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Valeur *</label>
                        <input type="number" name="discountValue" step="0.01" min="0" required
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none"
                            placeholder="ex: 15">
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Commande minimum (€)</label>
                        <input type="number" name="minOrderAmount" step="0.01" min="0"
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none"
                            placeholder="Optionnel">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Nb utilisations max</label>
                        <input type="number" name="maxUses" min="1"
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none"
                            placeholder="Illimité">
                    </div>
                </div>
                <div>
                    <label class="block text-xs font-medium text-brun mb-1">Date d'expiration</label>
                    <input type="date" name="expiresAt"
                        class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                </div>
            </div>
            <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-creme">
                <button type="button" onclick="document.getElementById('create-promo-modal').close()"
                    class="px-4 py-2 text-sm text-brun hover:text-terracotta transition-colors">Annuler</button>
                <button type="submit"
                    class="px-6 py-2 bg-terracotta text-blanc-casse rounded-gourmand font-medium text-sm hover:bg-terracotta-dark transition-colors">Créer</button>
            </div>
        </form>
    </dialog>

    <!-- Modals d'édition -->
    <% promos.forEach(function(promo) { %>
        <dialog id="edit-promo-<%= promo.id %>"
            class="bg-blanc-casse rounded-gourmand-lg shadow-warm-lg w-full max-w-md p-0 backdrop:bg-noir-cafe/40 backdrop:backdrop-blur-sm">
            <form method="POST" action="/admin/promos/<%= promo.id %>" class="p-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="font-display text-xl text-noir-cafe">Modifier : <%= promo.code %>
                    </h2>
                    <button type="button" onclick="document.getElementById('edit-promo-<%= promo.id %>').close()"
                        class="p-1 hover:bg-creme rounded-full">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="space-y-4">
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Code *</label>
                        <input type="text" name="code" value="<%= promo.code %>" required
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none uppercase tracking-wide">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-medium text-brun mb-1">Type de réduction *</label>
                            <select name="discountType" required
                                class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                                <option value="percentage" <%=promo.discountType==='percentage' ? 'selected' : '' %>
                                    >Pourcentage (%)</option>
                                <option value="fixed" <%=promo.discountType==='fixed' ? 'selected' : '' %>>Montant fixe
                                    (€)</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-brun mb-1">Valeur *</label>
                            <input type="number" name="discountValue" step="0.01" min="0"
                                value="<%= parseFloat(promo.discountValue) %>" required
                                class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-medium text-brun mb-1">Commande minimum (€)</label>
                            <input type="number" name="minOrderAmount" step="0.01" min="0"
                                value="<%= promo.minOrderAmount ? parseFloat(promo.minOrderAmount) : '' %>"
                                class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-brun mb-1">Nb utilisations max</label>
                            <input type="number" name="maxUses" min="1" value="<%= promo.maxUses || '' %>"
                                class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Date d'expiration</label>
                        <input type="date" name="expiresAt"
                            value="<%= promo.expiresAt ? new Date(promo.expiresAt).toISOString().split('T')[0] : '' %>"
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                    </div>
                    <div>
                        <label class="flex items-center gap-2 text-sm">
                            <input type="checkbox" name="isActive" <%=promo.isActive ? 'checked' : '' %>
                            class="rounded">
                            Actif
                        </label>
                    </div>
                </div>
                <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-creme">
                    <button type="button" onclick="document.getElementById('edit-promo-<%= promo.id %>').close()"
                        class="px-4 py-2 text-sm text-brun hover:text-terracotta transition-colors">Annuler</button>
                    <button type="submit"
                        class="px-6 py-2 bg-vert-the text-blanc-casse rounded-gourmand font-medium text-sm hover:opacity-90 transition-colors">Enregistrer</button>
                </div>
            </form>
        </dialog>
        <% }); %>
</body>

</html>