<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof metaTitle !=='undefined' ? metaTitle : "Catégories — Admin" %>
    </title>
    <meta name="robots" content="noindex, nofollow">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Playfair+Display:wght@600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://unpkg.com/alpinejs@3.14.3/dist/cdn.min.js" defer></script>
</head>

<body class="bg-creme font-body antialiased">
    <div class="flex min-h-screen">
        <%- include('../partials/admin-sidebar', { metaTitle, adminName }) %>

            <div class="flex-1 overflow-auto">
                <div class="p-6 lg:p-8">
                    <div class="flex items-center justify-between mb-8">
                        <h1 class="font-display text-2xl text-noir-cafe">Gestion des Catégories</h1>
                        <button onclick="document.getElementById('create-cat-modal').showModal()"
                            class="px-4 py-2 bg-terracotta text-blanc-casse rounded-gourmand font-medium hover:bg-terracotta-dark transition-colors text-sm flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 4v16m8-8H4" />
                            </svg>
                            Nouvelle catégorie
                        </button>
                    </div>

                    <!-- Messages -->
                    <% const query=typeof require !=='undefined' ? {} : {}; %>

                        <!-- Tableau catégories -->
                        <div class="bg-blanc-casse rounded-gourmand-lg shadow-card overflow-hidden">
                            <div class="overflow-x-auto">
                                <table class="w-full text-sm">
                                    <thead>
                                        <tr class="bg-creme text-left text-brun/60">
                                            <th class="px-4 py-3">Nom</th>
                                            <th class="px-4 py-3">Slug</th>
                                            <th class="px-4 py-3">Description</th>
                                            <th class="px-4 py-3">Ordre</th>
                                            <th class="px-4 py-3">Produits</th>
                                            <th class="px-4 py-3">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% categories.forEach(function(cat) { %>
                                            <tr class="border-b border-creme/50 hover:bg-creme/30 transition-colors">
                                                <td class="px-4 py-3 font-medium text-brun">
                                                    <%= cat.name %>
                                                </td>
                                                <td class="px-4 py-3 text-xs text-brun/40">
                                                    <%= cat.slug %>
                                                </td>
                                                <td class="px-4 py-3 text-brun/60 text-xs max-w-xs">
                                                    <%= cat.description ? cat.description.substring(0, 80) +
                                                        (cat.description.length> 80 ? '...' : '') : '—' %>
                                                </td>
                                                <td class="px-4 py-3 text-center">
                                                    <span
                                                        class="px-2 py-1 rounded-full text-xs font-medium bg-creme text-brun/60">
                                                        <%= cat.displayOrder %>
                                                    </span>
                                                </td>
                                                <td class="px-4 py-3 text-center">
                                                    <span
                                                        class="px-2 py-1 rounded-full text-xs font-medium bg-vert-the/10 text-vert-the">
                                                        <%= cat._count.products %>
                                                    </span>
                                                </td>
                                                <td class="px-4 py-3">
                                                    <div class="flex gap-2">
                                                        <button
                                                            onclick="document.getElementById('edit-cat-<%= cat.id %>').showModal()"
                                                            class="p-1 text-brun/40 hover:text-vert-the transition-colors"
                                                            title="Modifier">
                                                            <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                            </svg>
                                                        </button>
                                                        <% if (cat._count.products===0) { %>
                                                            <form method="POST"
                                                                action="/admin/categories/<%= cat.id %>/delete"
                                                                onsubmit="return confirm('Supprimer cette catégorie ?')">
                                                                <button type="submit"
                                                                    class="p-1 text-brun/40 hover:text-red-500 transition-colors"
                                                                    title="Supprimer">
                                                                    <svg class="w-4 h-4" fill="none"
                                                                        stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round" stroke-width="2"
                                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                                    </svg>
                                                                </button>
                                                            </form>
                                                            <% } else { %>
                                                                <span class="p-1 text-brun/20 cursor-not-allowed"
                                                                    title="Catégorie utilisée par des produits">
                                                                    <svg class="w-4 h-4" fill="none"
                                                                        stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round" stroke-width="2"
                                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                                    </svg>
                                                                </span>
                                                                <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% if (categories.length===0) { %>
                                                    <tr>
                                                        <td colspan="6" class="px-4 py-8 text-center text-brun/40">
                                                            Aucune catégorie. Cliquez sur "Nouvelle catégorie" pour en
                                                            créer une.
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                </div>
            </div>
    </div>

    <!-- Modal création -->
    <dialog id="create-cat-modal"
        class="bg-blanc-casse rounded-gourmand-lg shadow-warm-lg w-full max-w-md p-0 backdrop:bg-noir-cafe/40 backdrop:backdrop-blur-sm">
        <form method="POST" action="/admin/categories" class="p-8">
            <div class="flex items-center justify-between mb-6">
                <h2 class="font-display text-xl text-noir-cafe">Nouvelle Catégorie</h2>
                <button type="button" onclick="document.getElementById('create-cat-modal').close()"
                    class="p-1 hover:bg-creme rounded-full">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="space-y-4">
                <div>
                    <label class="block text-xs font-medium text-brun mb-1">Nom *</label>
                    <input type="text" name="name" required
                        class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none"
                        placeholder="ex: Thés Rares">
                </div>
                <div>
                    <label class="block text-xs font-medium text-brun mb-1">Description</label>
                    <textarea name="description" rows="3"
                        class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none resize-none"
                        placeholder="Description de la catégorie..."></textarea>
                </div>
                <div>
                    <label class="block text-xs font-medium text-brun mb-1">Ordre d'affichage</label>
                    <input type="number" name="displayOrder" value="0"
                        class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                </div>
            </div>
            <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-creme">
                <button type="button" onclick="document.getElementById('create-cat-modal').close()"
                    class="px-4 py-2 text-sm text-brun hover:text-terracotta transition-colors">Annuler</button>
                <button type="submit"
                    class="px-6 py-2 bg-terracotta text-blanc-casse rounded-gourmand font-medium text-sm hover:bg-terracotta-dark transition-colors">Créer</button>
            </div>
        </form>
    </dialog>

    <!-- Modals d'édition -->
    <% categories.forEach(function(cat) { %>
        <dialog id="edit-cat-<%= cat.id %>"
            class="bg-blanc-casse rounded-gourmand-lg shadow-warm-lg w-full max-w-md p-0 backdrop:bg-noir-cafe/40 backdrop:backdrop-blur-sm">
            <form method="POST" action="/admin/categories/<%= cat.id %>" class="p-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="font-display text-xl text-noir-cafe">Modifier : <%= cat.name %>
                    </h2>
                    <button type="button" onclick="document.getElementById('edit-cat-<%= cat.id %>').close()"
                        class="p-1 hover:bg-creme rounded-full">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="space-y-4">
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Nom *</label>
                        <input type="text" name="name" value="<%= cat.name %>" required
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Description</label>
                        <textarea name="description" rows="3"
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none resize-none"><%= cat.description || '' %></textarea>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-brun mb-1">Ordre d'affichage</label>
                        <input type="number" name="displayOrder" value="<%= cat.displayOrder %>"
                            class="w-full px-3 py-2 rounded-gourmand border border-creme text-sm focus:border-terracotta outline-none">
                    </div>
                </div>
                <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-creme">
                    <button type="button" onclick="document.getElementById('edit-cat-<%= cat.id %>').close()"
                        class="px-4 py-2 text-sm text-brun hover:text-terracotta transition-colors">Annuler</button>
                    <button type="submit"
                        class="px-6 py-2 bg-vert-the text-blanc-casse rounded-gourmand font-medium text-sm hover:opacity-90 transition-colors">Enregistrer</button>
                </div>
            </form>
        </dialog>
        <% }); %>
</body>

</html>