<!-- views/partials/admin-sidebar.ejs ‚Äî Barre lat√©rale admin (r√©utilisable) -->

<!-- Floating Mobile Actions (Visible only on LG screens and below) -->
<div class="lg:hidden">
    <!-- Burger Menu (Fixed Left) -->
    <button id="admin-sidebar-toggle"
        class="fixed top-4 left-4 z-50 p-2.5 bg-white/90 backdrop-blur-md shadow-sm border border-creme/20 text-noir-cafe rounded-full hover:bg-creme/10 transition-all active:scale-95"
        onclick="document.getElementById('admin-sidebar').classList.toggle('-translate-x-full'); document.getElementById('admin-sidebar-overlay').classList.toggle('hidden')">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
    </button>

    <!-- Notification Bell (Fixed Right) - ONLY ON ORDERS PAGE -->
    <% if (typeof metaTitle !=='undefined' && metaTitle==='Gestion Commandes ‚Äî Admin' ) { %>
        <div x-data="{ showNotifications: false }"
            x-init="$watch('showNotifications', value => document.body.classList.toggle('overflow-hidden', value))">

            <template x-teleport="body">
                <button @click="showNotifications = !showNotifications"
                    style="position: fixed; top: 1.5rem; right: 1rem;"
                    class="fixed top-2 right-2 z-[105] p-2.5 bg-white/90 backdrop-blur-md shadow-sm border border-creme/20 text-noir-cafe rounded-full hover:bg-creme/10 transition-all active:scale-95">

                    <!-- Icone Cloche (Closed) -->
                    <svg x-show="!showNotifications" class="w-6 h-6" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>

                    <!-- Icone Croix (Open) -->
                    <svg x-show="showNotifications" class="w-6 h-6" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>

                    <% if (typeof unpaidOrders !=='undefined' && unpaidOrders && unpaidOrders.length> 0) { %>
                        <span x-show="!showNotifications"
                            class="absolute top-0 right-0 w-4 h-4 bg-terracotta text-white text-[10px] font-bold flex items-center justify-center rounded-full animate-bounce shadow-sm ring-2 ring-white">
                            <%= unpaidOrders.length %>
                        </span>
                        <% } %>
                </button>
            </template>

            <!-- Modal Notifications -->
            <template x-teleport="body">
                <div x-show="showNotifications"
                    class="fixed inset-0 z-[100] flex items-center justify-center px-4 safe-area-inset-bottom"
                    style="display: none;">

                    <!-- Backdrop -->
                    <div class="absolute inset-0 bg-noir-cafe/60 backdrop-blur-sm" @click="showNotifications = false"
                        x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0"
                        x-transition:enter-end="opacity-100" x-transition:leave="ease-in duration-200"
                        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0">
                    </div>

                    <!-- Modal Content -->
                    <div class="bg-white rounded-gourmand-lg w-full max-w-sm flex flex-col shadow-xl transform transition-all relative z-10 overflow-hidden"
                        style="max-height: 85vh;" x-transition:enter="ease-out duration-300"
                        x-transition:enter-start="opacity-0 translate-y-4 scale-95"
                        x-transition:enter-end="opacity-100 translate-y-0 scale-100"
                        x-transition:leave="ease-in duration-200"
                        x-transition:leave-start="opacity-100 translate-y-0 scale-100"
                        x-transition:leave-end="opacity-0 translate-y-4 scale-95">

                        <!-- Modal Header Removed -->

                        <div class="overflow-y-auto p-4 space-y-4 bg-blanc-casse flex-1 min-h-0 overscroll-contain"
                            style="touch-action: pan-y;">
                            <% if (typeof unpaidOrders !=='undefined' && unpaidOrders && unpaidOrders.length> 0) { %>
                                <% unpaidOrders.forEach(order=> { %>
                                    <!-- Carte Commande -->
                                    <div
                                        class="bg-white rounded-gourmand shadow-sm p-4 border border-creme/20 flex flex-col gap-3 group">
                                        <!-- Header: Name/Date + Badge -->
                                        <div class="flex justify-between items-start gap-4">
                                            <div class="min-w-0">
                                                <p class="font-display text-lg text-noir-cafe leading-snug truncate">
                                                    <%= order.customerName %>
                                                </p>
                                                <p class="text-xs text-brun/50">
                                                    <%= new Date(order.createdAt).toLocaleDateString('fr-FR', {
                                                        day: 'numeric' , month: 'long' }) %>
                                                        √† <%= new Date(order.createdAt).toLocaleTimeString('fr-FR', {
                                                            hour: '2-digit' , minute:'2-digit' }) %>
                                                </p>
                                            </div>
                                            <span
                                                class="shrink-0 text-xs font-bold text-terracotta bg-terracotta/10 px-2.5 py-1 rounded-full whitespace-nowrap">
                                                <%= order.orderNumber %>
                                            </span>
                                        </div>

                                        <!-- Articles Preview -->
                                        <div class="space-y-1">
                                            <% order.items.slice(0, 2).forEach(item=> { %>
                                                <div class="flex justify-between text-sm">
                                                    <span class="text-brun/80 truncate">
                                                        <span class="font-bold text-terracotta">
                                                            <%= item.quantity %>x
                                                        </span>
                                                        <%= item.productName %>
                                                    </span>
                                                </div>
                                                <% }) %>
                                                    <% if (order.items.length> 2) { %>
                                                        <p class="text-xs text-brun/40 italic">+ <%= order.items.length
                                                                - 2 %> autres...</p>
                                                        <% } %>
                                        </div>

                                        <!-- Footer: Price + Actions + Delivery -->
                                        <div
                                            class="flex items-center justify-between border-t border-creme/10 pt-3 mt-auto">
                                            <div class="flex flex-col">
                                                <span class="font-display text-lg text-noir-cafe">
                                                    <%= formatPrice(Number(order.total)) %>
                                                </span>
                                                <span class="text-[10px] text-brun/40 flex items-center gap-1">
                                                    <%= order.deliveryMethod==='pickup' ? 'üìç Retrait' : 'üöö Livraison'
                                                        %>
                                                </span>
                                            </div>

                                            <div class="flex items-center gap-2">
                                                <!-- Delete Button (Only if cancelled) -->
                                                <% if (['cancelled', 'canceled' , 'CANCELLED' , 'annul√©e'
                                                    ].includes(order.status.toLowerCase())) { %>
                                                    <button
                                                        onclick="if(confirm('Supprimer la commande <%= order.orderNumber %> ?\nCette action est irr√©versible.')) { fetch('/admin/commandes/<%= order.id %>/delete', { method: 'POST' }).then(() => window.location.reload()); }"
                                                        class="p-2 text-brun/30 hover:text-red-600 hover:bg-red-50 rounded-full transition-colors"
                                                        title="Supprimer">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                            viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                        </svg>
                                                    </button>
                                                    <% } %>

                                                        <!-- Checkbox Paiement -->
                                                        <div class="flex items-center gap-2 bg-creme/10 px-3 py-1.5 rounded-gourmand hover:bg-creme/20 transition-colors cursor-pointer"
                                                            onclick="document.getElementById('modal-paid-<%= order.id %>').click()">
                                                            <input type="checkbox" id="modal-paid-<%= order.id %>"
                                                                onclick="event.stopPropagation()" onchange="fetch('/api/admin/orders/<%= order.id %>/status', { 
                                                            method: 'PUT', 
                                                            headers: { 'Content-Type': 'application/json' }, 
                                                            body: JSON.stringify({ isPaid: this.checked }) 
                                                        }).then(() => location.reload())"
                                                                class="w-4 h-4 text-terracotta rounded focus:ring-terracotta cursor-pointer accent-terracotta">
                                                            <label for="modal-paid-<%= order.id %>"
                                                                class="text-xs font-medium text-noir-cafe cursor-pointer select-none">
                                                                Pay√©e
                                                            </label>
                                                        </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <div class="text-center py-8 text-brun/60 flex flex-col items-center">
                                                <svg class="w-12 h-12 text-creme mb-3" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="1"
                                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                <p>Tout est √† jour !</p>
                                            </div>
                                            <% } %>
                        </div>



                        <!-- Footer Actions -->
                        <div class="p-4 border-t border-creme/10 bg-blanc-casse/50">
                            <button @click="showNotifications = false"
                                class="w-full py-2 text-center text-sm font-medium text-brun/60 hover:text-brun hover:bg-creme/10 rounded-gourmand transition-colors">
                                Fermer
                            </button>
                        </div>

                    </div>
                </div>
            </template>
        </div>
        <% } %>
</div>

<!-- Overlay mobile -->
<div id="admin-sidebar-overlay" class="fixed inset-0 bg-noir-cafe/50 z-45 lg:hidden hidden"
    onclick="document.getElementById('admin-sidebar').classList.add('-translate-x-full'); this.classList.add('hidden')">
</div>

<!-- Sidebar -->
<aside id="admin-sidebar"
    class="w-64 bg-noir-cafe text-creme flex-shrink-0 flex flex-col fixed lg:relative inset-y-0 left-0 z-50 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out">
    <div class="p-6 border-b border-creme/10 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2">
            <span class="text-2xl">üçµ</span>
            <span class="font-display text-lg text-creme">L'InviTh√©</span>
        </a>
        <!-- Bouton fermer mobile -->
        <button class="lg:hidden p-1 text-creme/50 hover:text-creme"
            onclick="document.getElementById('admin-sidebar').classList.add('-translate-x-full'); document.getElementById('admin-sidebar-overlay').classList.add('hidden')">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>
    <nav class="flex-1 p-4 space-y-1 overflow-y-auto">
        <a href="/admin/dashboard"
            class="flex items-center gap-3 px-4 py-3 rounded-gourmand text-sm transition-colors
       <%= typeof metaTitle !== 'undefined' && metaTitle.includes('Dashboard') ? 'bg-terracotta text-blanc-casse' : 'text-creme/70 hover:bg-creme/10 hover:text-creme' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Dashboard
        </a>
        <a href="/admin/produits"
            class="flex items-center gap-3 px-4 py-3 rounded-gourmand text-sm transition-colors
       <%= typeof metaTitle !== 'undefined' && metaTitle.includes('Produits') ? 'bg-terracotta text-blanc-casse' : 'text-creme/70 hover:bg-creme/10 hover:text-creme' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            Produits
        </a>
        <a href="/admin/commandes"
            class="flex items-center gap-3 px-4 py-3 rounded-gourmand text-sm transition-colors
       <%= typeof metaTitle !== 'undefined' && metaTitle.includes('Commandes') ? 'bg-terracotta text-blanc-casse' : 'text-creme/70 hover:bg-creme/10 hover:text-creme' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            Commandes
        </a>
        <a href="/admin/stocks"
            class="flex items-center gap-3 px-4 py-3 rounded-gourmand text-sm transition-colors
       <%= typeof metaTitle !== 'undefined' && metaTitle.includes('Stocks') ? 'bg-terracotta text-blanc-casse' : 'text-creme/70 hover:bg-creme/10 hover:text-creme' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
            </svg>
            Stocks
        </a>
        <a href="/admin/categories"
            class="flex items-center gap-3 px-4 py-3 rounded-gourmand text-sm transition-colors
       <%= typeof metaTitle !== 'undefined' && metaTitle.includes('Cat√©gories') ? 'bg-terracotta text-blanc-casse' : 'text-creme/70 hover:bg-creme/10 hover:text-creme' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z" />
            </svg>
            Cat√©gories
        </a>
        <a href="/admin/promos"
            class="flex items-center gap-3 px-4 py-3 rounded-gourmand text-sm transition-colors
       <%= typeof metaTitle !== 'undefined' && metaTitle.includes('Promo') ? 'bg-terracotta text-blanc-casse' : 'text-creme/70 hover:bg-creme/10 hover:text-creme' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
            </svg>
            Codes Promo
        </a>
        <a href="/admin/avis"
            class="flex items-center gap-3 px-4 py-3 rounded-gourmand text-sm transition-colors
       <%= typeof metaTitle !== 'undefined' && metaTitle.includes('Avis') ? 'bg-terracotta text-blanc-casse' : 'text-creme/70 hover:bg-creme/10 hover:text-creme' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Avis clients
        </a>
    </nav>
    <div class="p-4 border-t border-creme/10">
        <div class="flex items-center gap-3 px-2 mb-3">
            <div
                class="w-8 h-8 bg-terracotta rounded-full flex items-center justify-center text-blanc-casse text-sm font-bold">
                <%= typeof adminName !=='undefined' && adminName ? adminName.charAt(0).toUpperCase() : 'A' %>
            </div>
            <p class="text-sm text-creme font-medium">
                <%= typeof adminName !=='undefined' ? adminName : 'Admin' %>
            </p>
        </div>
        <a href="/admin/logout"
            class="flex items-center gap-2 px-4 py-2 text-sm text-creme/50 hover:text-rose-macaron transition-colors rounded-gourmand hover:bg-creme/5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            D√©connexion
        </a>
    </div>
</aside>

<script>
    // Toggle overlay quand la sidebar s'ouvre/ferme
    const sidebarToggle = document.getElementById('admin-sidebar-toggle');
    if (sidebarToggle) {
        sidebarToggle.addEventListener('click', function () {
            const overlay = document.getElementById('admin-sidebar-overlay');
            const sidebar = document.getElementById('admin-sidebar');
            if (sidebar.classList.contains('-translate-x-full')) {
                overlay.classList.add('hidden');
            } else {
                overlay.classList.remove('hidden');
            }
        });
    }
</script>